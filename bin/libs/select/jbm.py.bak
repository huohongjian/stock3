def main(ps):
	ps = {
		'page': 1
	}.update(ps={})
	while True:
		perform(ps)

		I = input('stock-ss-jbm> ').strip()
		if I == '':
			ps['page'] += 1
		elif I in ['exit', 'e']:
			return
		elif I in['.', 'help']:
			help()
			return


def perform(ps):
	print(ps)
	ps['offset'] = (ps.get('page')-1) * 10
	sql = "SELECT code, name from stock_basics LIMIT {offset}, 10".format(**ps)
	
	res = db.conn().all(sql)
	for r in res:
		print(r)
	print()




